<%- include('../partials/header.ejs') -%>


  <h1>Add New Ticket</h1>

<div class="newForm">
    <table>
        <tr class="tableAddBody">
          <th>

            <form id="new-flight" class="new-flight" action="/flights/<%= flight %>/tickets" method="POST">
              <label>Seat Number:</label>
              <input name="seat" required pattern="\b(0?[1-9]|[1-3][0-9]|)[A-F]\b">
              <label>Price ($):</label>
              <input type="number" name="price" pattern="^\d*(\.\d{2}$)?">
              <input type="submit" style="margin:10px;" value="Add Ticket">
          </form>
          </th>
        </tr>
       
      </table>

</div>




